<div class="card">
  <div class="card-content">
    <div class="row">
      <div class="col s12 m8">
        <h5>
          <a href="<%= domains_path %>" class="grey-text" style="margin-right: 1rem"><i class="material-icons md">arrow_back</i></a>
          <code><%= @domain.url %></code>
        </h5>
      </div>
      <div class="col s12">
        <hr>
          <% if @domain.indexed? %>
            Tato doména byla naposledy indexována <% @domain.last_indexed_at %>
          <% else %>
            <span class="red-text">Tato doména nebyla nikdy indexována.</span>
          <% end %>
      </div>
    </div>
  </div>
</div>
