<div class="row">
  <div class="col-sm-12 d-flex">
    <a href="<%= domains_path %>" class="text-muted mr-3">
      <i class="fas fa-arrow-left" style="font-size: 1.5rem;"></i>
    </a>
    <h4>Upravit doménu <code><%= @domain.url %></code></h4>
  </div>
  <div class="col-sm-12">
    <div class="card mt-4">
      <div class="card-body">
        <%= form_with url: domain_path(@domain), method: :patch do %>
          <div class="form-group">
            <%= label_tag "URL adresa kořenového adresáře" %>
            <%= text_field :domain, :url, autofocus: true, class: 'form-control', required: true, url: true %>
          </div>
          <div class="col-sm-s12">
            <%= submit_tag "Uložit změny", class: 'btn btn-primary' %>
            <%= link_to "Smazat tuto doménu", domain_path(@domain), method: :delete, class: 'btn btn-danger', data: { confirm: "Tato akce je nevratná." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
